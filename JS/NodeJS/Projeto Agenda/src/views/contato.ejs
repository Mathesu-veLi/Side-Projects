<%- include('includes/head');%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo</p>

      <%- include('includes/messages') %>

      <% if(contato._id) { %>
      <form action="/contato/edit/<%= contato._id %>" method="post">
        <% } else { %>
        <form action="/contato/register" method="post">
          <% } %>
          <input type="hidden" name="_csrf" value=<%=csrfToken %>>
          <input type="hidden" name="criadoPor" value="<%= user.email %>">
          <div class="mb-3">
            <label for="nomeInput" class="form-label">Nome</label>
            <input value="<%= contato.nome %>" type="text" name="nome" class="form-control" id="nomeInput">
          </div>
          <div class="mb-3">
            <label for="sobrenomeInput" class="form-label">Sobrenome</label>
            <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control" id="sobrenomeInput">
          </div>
          <div class="mb-3">
            <label for="emailInput" class="form-label">E-mail</label>
            <input value="<%= contato.email %>" type="email" name="email" class="form-control" id="emailInput">
          </div>
          <div class="mb-3">
            <label for="telInput" class="form-label">Telefone</label>
            <input value="<%= contato.tel %>" type="tel" name="tel" class="form-control" id="telInput">
          </div>

          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer'); %>